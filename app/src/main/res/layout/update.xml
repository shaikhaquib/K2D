<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@color/gray">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maiandra_gd_regular"
        android:text="YOU ARE USING "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:textSize="@dimen/font_20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#4E4D4D"
        android:fontFamily="@font/maiandra_gd_regular"
        android:text="@string/out_dated_version_of_our_app"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="PLEASE,"
        android:fontFamily="@font/maiandra_gd_regular"
        android:textSize="@dimen/font_20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/maiandra_gd_regular"
        android:text="UPDATE APP"
        android:textColor="#4E4D4D"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/maiandra_gd_regular"
        android:text="FOR BETTER EXPERIENCE."
        android:textSize="@dimen/dimen_16" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:padding="60dp"
        android:src="@drawable/ic_update_app" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="4"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="50dp">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/updateappbtn"
        android:background="@drawable/round_gradient"
        android:gravity="center"
        android:padding="12dp"
        android:text="UPDATE NOW"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>


</LinearLayout>

</RelativeLayout>