<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="6dp"
android:layout_margin="8dp"
app:cardElevation="8dp"
xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_margin="8dp"
    android:weightSum="10"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/product_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/ic_kirana2door_icons_green"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_weight="8"
        >

        <TextView
            android:id="@+id/stockistname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="STOCK-LIST NAME"
            android:layout_gravity="center"
            android:fontFamily="@font/maiandra_gd_regular"
            android:textColor="#919191"
            android:paddingLeft="8dp"
            android:textSize="@dimen/font_20sp"/>
        <TextView
            android:id="@+id/shoptiming"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Timing 9:00 am to 9:00 pm"
            android:layout_gravity="center"
            android:fontFamily="@font/maiandra_gd_regular"
            android:textColor="#919191"
            android:paddingLeft="8dp"
            />


    </LinearLayout>
    <ImageView
        android:id="@+id/search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/ic_kirana2door_icons_search"
        android:layout_marginRight="5dp"/>

</LinearLayout>


</android.support.v7.widget.CardView>