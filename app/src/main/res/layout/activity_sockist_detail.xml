<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:scrollbars="none"
    tools:context=".activities.StockistDetail"
    android:layout_margin="@dimen/dimen_16">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="43dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stockislogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/border"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/maiandra_gd_regular"
                android:id="@+id/shopname"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ownername"
                android:fontFamily="@font/maiandra_gd_regular"
                android:textSize="@dimen/font_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/font_10sp"
                android:id="@+id/timing"
                android:fontFamily="@font/maiandra_gd_regular"
                android:textSize="@dimen/dimen_16"
                android:padding="12dp"
                android:background="@drawable/border"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_margin="8dp"

                >



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/username"
                    android:drawablePadding="@dimen/font_10sp"
                    android:drawableLeft="@drawable/ic_closed_envelope_shape"
                    android:layout_weight="8"
                    android:fontFamily="@font/maiandra_gd_regular"
                    android:paddingLeft="8dp"
                    android:id="@+id/email"
                    android:enabled="false"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:gravity="center"
                    android:id="@+id/sendmail"
                    android:fontFamily="@font/maiandra_gd_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="MAIL"
                    android:background="@drawable/background"/>


            </LinearLayout>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@drawable/arc_shap"
                android:src="@drawable/ic_maps_and_flags"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                 >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_16"
                    android:gravity="center"
                    android:fontFamily="@font/maiandra_gd_regular"
                    android:id="@+id/comadd"
                    android:background="#90E6E8EE"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
</ScrollView>