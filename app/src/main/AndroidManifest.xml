<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kirana2door.kiranatodoor">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".api.AppController"
        android:allowBackup="false"
        android:icon="@drawable/kiranaicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity android:name=".activities.StockistDetail"></activity>
        <activity android:name=".activities.SubOrder"></activity>
        <activity android:name=".activities.ContactVerification" />
        <activity android:name=".activities.UpdateContact" />
        <activity android:name=".activities.ManageAddress" />
        <activity android:name=".activities.PersonalInfo" />
        <activity android:name=".activities.ProductDetail" />
        <activity
            android:name=".activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CartProductList" />
        <activity android:name=".activities.Product_page" />
        <activity android:name=".activities.ChangePassword" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activities.Home"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CustomerRegistration" />
        <activity android:name=".activities.OTPVerification" />
        <activity android:name=".activities.ForgotPassword" />
        <activity android:name=".activities.ForgotPassVerification" />
        <activity android:name=".activities.SetNewPassword" />
    </application>

</manifest>